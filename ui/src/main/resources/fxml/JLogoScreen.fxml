<AnchorPane prefHeight="680.0" prefWidth="700.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unicam.cs.pa.jlogo115006.ui.controllers.ScreenController">
